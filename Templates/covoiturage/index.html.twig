{% extends 'base.html.twig' %}

{% block title %}Recherche de covoiturages{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4">Rechercher un covoiturage</h2>
    
    {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-md-4">
                {{ form_row(form.depart) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.arrivee) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.date) }}
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary h-100">Rechercher</button>
            </div>
        </div>
    {{ form_end(form) }}

    <h3 class="mb-3">Résultats</h3>
    
    {% if covoiturages %}
        <div class="row">
            {% for covoiturage in covoiturages %}
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{ covoiturage.depart }} → {{ covoiturage.arrivee }}
                                <span class="float-end badge bg-success">{{ covoiturage.prix }}€</span>
                            </h5>
                            
                            <div class="mb-3">
                                <div>
                                    <strong>Départ:</strong> {{ covoiturage.dateDepart|date('d/m/Y H:i') }}
                                </div>
                                <div>
                                    <strong>Arrivée:</strong> {{ covoiturage.dateArrivee|date('d/m/Y H:i') }}
                                </div>
                                <div>
                                    <strong>Places:</strong> {{ covoiturage.placesDisponibles }}
                                </div>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <strong>Conducteur:</strong> {{ covoiturage.chauffeur.pseudo }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('covoiturage_detail', {'id': covoiturage.id}) }}" 
                               class="btn btn-primary w-100">
                                Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info">
            Aucun covoiturage trouvé. Essayez d'élargir vos critères de recherche.
        </div>
    {% endif %}
</div>
{% endblock %}