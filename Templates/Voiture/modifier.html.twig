{% extends 'base.html.twig' %}

{% block title %}Modifier mon véhicule - {{ voiture.marque }} {{ voiture.modele }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h4">
                        <i class="fas fa-car"></i> Modifier mon véhicule
                    </h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.marque, {
                                'label': 'Marque',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.modele, {
                                'label': 'Modèle',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.couleur, {
                                'label': 'Couleur',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.energie, {
                                'label': 'Type d\'énergie',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.plaqueImmatriculation, {
                                'label': 'Plaque d\'immatriculation',
                                'attr': {'class': 'form-control mb-3'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.nbPlaces, {
                                'label': 'Nombre de places',
                                'attr': {
                                    'class': 'form-control mb-3',
                                    'min': 1
                                }
                            }) }}
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('dashboard') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                    
                    <hr class="my-4">
                    
                    <div class="text-end">
                        <a href="{{ path('supprimer_voiture', {'id': voiture.id}) }}" 
                           class="btn btn-outline-danger"
                           onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce véhicule ?')">
                            <i class="fas fa-trash-alt"></i> Supprimer ce véhicule
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .card-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eee;
    }
    
    .form-control {
        border-radius: 4px;
    }
</style>
{% endblock %}